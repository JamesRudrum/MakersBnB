  <body>
  <fieldset>
    <legend>Create Listing</legend>
    <form action="feed_new" method="post">
    <div class="form-group">
      <label for="Name"> Name </label>
      <input type="text" class="form-control" id="name" aria-describedby="name" placeholder="name">
      <small id="nameHelp" class="form-text text-muted">Give your place a name place</small>
    </div>
    <div class="form-group">
      <label for="Description">Description</label>
      <input type="text" class="form-control" id="description" aria-describedby="name" placeholder="description">
      <small id="descriptionHelp" class="form-text text-muted">Add a little description of your place</small>
    </div>
    <div class="form-group">
      <label for="Price">Price</label>
      <input type="number" class="form-control" id="price" aria-describedby="price" placeholder="price">
      <small id="priceHelp" class="form-text text-muted">Add price in pounds</small>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Available From</label>
      <input type="date" class="form-control" id="availableFrom" aria-describedby="emailHelp" placeholder="yyyy-mm-dd" min="2019-01-01" max="2020-01-01">
      <label for="exampleInputDate">Available Until</label>
      <input type="date" class="form-control" id="availableUntil" placeholder="yyyy-mm-dd" min="2019-01-01" max="2020-01-01">
    </div>
    </form>
      <br>
      <form action="/feed" method="get">
      <input type="submit" class="btn btn-primary" value="Add Listing">
    </form>
    <br>
